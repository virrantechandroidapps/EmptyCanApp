<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout"
    android:padding="15dip"
    >
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:id="@+id/address_action"
    android:src="@drawable/ic_more_vert_grey600_18dp"
    android:background="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/addressHeader"
        android:paddingLeft="10dip"
        android:textSize="22sp"
        android:layout_marginBottom="15dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09788572550"
            android:id="@+id/phoneNo"
            android:paddingLeft="10dip"
            android:drawableLeft="@drawable/phonenumbericon"
            android:layout_marginBottom="8dip"
            android:drawablePadding="15dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/addressPart1"
            android:paddingLeft="10dip"
            android:textStyle="bold"
            android:drawableLeft="@drawable/addressicon"
            android:drawablePadding="15dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/addressPart2"
            android:layout_marginLeft="33dp"
            android:paddingLeft="10dip"
           />

    </LinearLayout>
</LinearLayout>