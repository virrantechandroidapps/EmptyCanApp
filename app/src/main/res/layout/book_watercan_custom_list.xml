<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/card_background"
    android:orientation="horizontal"
    android:paddingTop="5dip"
    android:paddingBottom="5dip"
    android:paddingRight="5dip">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/ivFruit"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical">

        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
-->
            <TextView
                android:id="@+id/tvFruitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textSize="16dp"
                android:text="TEST WATER CAN"
                android:textColor="#080808"
                android:singleLine="true"
                android:ellipsize="end"
                />
        <TextView
            android:id="@+id/itemQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:textSize="16dp"
            android:text="25L"
            android:textColor="#b0b0b1"
            android:singleLine="true"
            android:ellipsize="end"
            />
      <!--  </LinearLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            >

            <TextView
                android:id="@+id/tvFruitPrice"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:textColor="@color/pastel_red"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ib_addnew"
                />


          <!--  <ImageButton
                android:id="@+id/ib_addnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ffffff"
                android:src="@mipmap/emptycanpluss"
                android:layout_toLeftOf="@+id/editTextQuantity"/>
-->
            <TextView
                android:id="@+id/ib_addnew"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:text="+"

                android:textSize="15sp"
                android:layout_toLeftOf="@+id/editTextQuantity"
                android:layout_centerVertical="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/view_reactangle"
                />


            <TextView
                android:id="@+id/editTextQuantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/pastel_red"
                android:text="0"
                android:layout_toLeftOf="@+id/ib_remove"
                android:layout_centerVertical="true"
              />
            <TextView
                android:id="@+id/ib_remove"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:text="-"
                android:textSize="15sp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/view_reactangle"
                />


            <!--  <ImageButton
                  android:id="@+id/ib_remove"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:background="#00ffffff"
                  android:src="@mipmap/empytcanminus"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  />-->
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>



